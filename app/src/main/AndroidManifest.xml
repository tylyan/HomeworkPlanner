<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.juanyuk.homeworkplanner"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity
            android:name=".AddCourse"
            android:parentActivityName=".Courses">
        </activity>
        <activity
            android:name=".NewAssignment"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".Courses"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".CourseDetail"
            android:parentActivityName=".Courses">
        </activity>
        <activity
            android:name=".AssignmentDetail"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".Search"
                  android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>